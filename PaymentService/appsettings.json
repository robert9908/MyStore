{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/payment-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=PAYMENT_DB_HOST;Database=PaymentServiceDb;Username=postgres;Password=CHANGE_ME_IN_ENV;",
    "Redis": "REDIS_ENDPOINT_CHANGE_ME_IN_ENV",
    "RabbitMQ": "amqp://RABBITMQ_USER:RABBITMQ_PASSWORD@RABBITMQ_HOST:5672/"
  },
  "JwtSettings": {
    "SecretKey": "CHANGE_ME_IN_ENV_MIN_32_CHARS",
    "Issuer": "MyStore.PaymentService",
    "Audience": "MyStore.Client",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "PaymentGateway": {
    "BaseUrl": "https://api.stripe.com/v1/",
    "PublicKey": "CHANGE_ME_IN_ENV",
    "SecretKey": "CHANGE_ME_IN_ENV",
    "WebhookSecret": "CHANGE_ME_IN_ENV"
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:3001" ]
  },
  "HealthChecks": {
    "Enabled": true,
    "UI": {
      "Enabled": true,
      "Path": "/health-ui"
    }
  },
  "Cache": {
    "DefaultExpirationMinutes": 15,
    "PaymentExpirationMinutes": 30,
    "UserPaymentsExpirationMinutes": 5
  },
  "Pagination": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  },
  "RateLimiting": {
    "PaymentRequests": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    },
    "RefundRequests": {
      "PermitLimit": 5,
      "WindowMinutes": 5
    }
  },
  "AllowedHosts": "*"
}
