{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=ORDER_DB_HOST;Database=MyStore_Orders;Username=postgres;Password=CHANGE_ME_IN_ENV",
    "Redis": "REDIS_ENDPOINT_CHANGE_ME_IN_ENV"
  },
  "JwtSettings": {
    "SecretKey": "CHANGE_ME_IN_ENV_MIN_32_CHARS",
    "Issuer": "MyStore.OrderService",
    "Audience": "MyStore.Client",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },
  "RabbitMQ": {
    "Host": "RABBITMQ_HOST",
    "Port": 5672,
    "Username": "CHANGE_ME_IN_ENV",
    "Password": "CHANGE_ME_IN_ENV",
    "VirtualHost": "/",
    "ExchangeName": "MyStore.Orders",
    "QueueName": "order-events"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://localhost:7000"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "HealthChecks": {
    "UI": {
      "Path": "/health-ui",
      "ApiPath": "/health-api"
    }
  },
  "Cache": {
    "DefaultExpirationMinutes": 5,
    "UserOrdersExpirationMinutes": 2
  },
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  }
}
