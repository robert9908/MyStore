{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=authdb_dev;Username=postgres;Password=0610;Include Error Detail=true",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "Secret": "development-secret-key-that-is-at-least-32-characters-long-for-testing",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 30
  },
  "Security": {
    "RequireHttps": false,
    "RequireEmailConfirmation": false,
    "PasswordPolicy": {
      "RequiredLength": 6,
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireNonAlphanumeric": false
    }
  },
  "EmailSettings": {
    "From": "dev@localhost",
    "FromName": "MyStore Dev",
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "Username": "",
    "Password": "",
    "EnableSsl": false
  },
  "RateLimiting": {
    "Login": {
      "MaxAttempts": 100,
      "WindowMinutes": 1,
      "LockoutMinutes": 1
    },
    "Registration": {
      "MaxAttempts": 100,
      "WindowMinutes": 1
    },
    "PasswordReset": {
      "MaxAttempts": 100,
      "WindowMinutes": 1
    }
  }
}
