{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.PostgreSQL"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/authservice-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} <s:{SourceContext}> <id:{RequestId}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId"],
    "Properties": {
      "Application": "AuthService"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=AUTH_DB_HOST;Port=5432;Database=authdb;Username=postgres;Password=CHANGE_ME_IN_ENV;Include Error Detail=true",
    "Redis": "REDIS_ENDPOINT_CHANGE_ME_IN_ENV"
  },
  "JwtSettings": {
    "Secret": "CHANGE_ME_IN_ENV_MIN_32_CHARS",
    "Issuer": "MyStore.AuthService",
    "Audience": "MyStore.Client",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7,
    "ClockSkewMinutes": 5
  },
  "Authentication": {
    "Google": {
      "ClientId": "CHANGE_ME_IN_ENV",
      "ClientSecret": "CHANGE_ME_IN_ENV"
    }
  },
  "EmailSettings": {
    "From": "noreply@mystore.com",
    "FromName": "MyStore Team",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "CHANGE_ME_IN_ENV",
    "Password": "CHANGE_ME_IN_ENV",
    "EnableSsl": true,
    "Templates": {
      "EmailConfirmation": "Please confirm your email by clicking: {confirmationUrl}",
      "PasswordReset": "Reset your password by clicking: {resetUrl}",
      "TwoFactorCode": "Your 2FA code is: {code}"
    }
  },
  "RateLimiting": {
    "Login": {
      "MaxAttempts": 5,
      "WindowMinutes": 15,
      "LockoutMinutes": 30
    },
    "Registration": {
      "MaxAttempts": 3,
      "WindowMinutes": 60
    },
    "PasswordReset": {
      "MaxAttempts": 3,
      "WindowMinutes": 60
    }
  },
  "Security": {
    "RequireHttps": true,
    "RequireEmailConfirmation": true,
    "PasswordPolicy": {
      "RequiredLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true
    },
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutTimeMinutes": 30
    }
  },
  "Redis": {
    "ConnectionString": "REDIS_ENDPOINT_CHANGE_ME_IN_ENV",
    "Database": 0,
    "KeyPrefix": "authservice:",
    "DefaultExpiry": "01:00:00"
  },
  "HealthChecks": {
    "UI": {
      "Path": "/health-ui",
      "ApiPath": "/health-api"
    }
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "https://mystore.com"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  "AllowedHosts": "*"
}
